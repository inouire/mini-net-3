{% extends 'app.html.twig' %}

{% block body %}
    {{ render(controller('AppBundle:Home:posts', { 'page': 1 })) }}       
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
   
    <script type="text/javascript">
       
        $(document).ready(function(){
            
            //init fancybox on all pictures
            $(".fancybox").fancybox({
                loop: true,
                openEffect: 'fade',
                closeEffect: 'fade',
                nextEffect: 'none',
                prevEffect:'none',
                nextClick: true,
            });
                
            $(".delete-comment").click(function (event) {
                if(confirm("ÃŠtes vous sur de vouloir supprimer ce commentaire ?")){
                    var button_id = event.target.id;
                    $('#'+button_id).trigger('confirmed-by-user');
                }
            });

            $(".toggle-comment-form").click(function(event) {
                event.preventDefault();
                $(this).parent().children().toggle();
            });
        });
    </script>
{% endblock %}
